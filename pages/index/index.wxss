/* 蓝标题 start */
.blue-title-line {
  padding: 25rpx 23rpx 25rpx 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  position: relative;
}

.blue-title-line::after {
  content: '';
  width: 656rpx;
  height: 2rpx;
  bottom: 0;
  background: #000;
  opacity: 0.03;
  right: 23rpx;
  position: absolute;
}

.blue-title-line .title {
  display: flex;
  align-items: center;
  color: #4583fb;
  font-size: 36rpx;
}

.blue-title-line .title::before {
  content: '';
  width: 4rpx;
  height: 34rpx;
  border-radius: 2rpx;
  opacity: 0.8;
  background: #2586ff;
  margin-right: 8rpx;
}

.blue-title-line .more {
  display: flex;
  align-items: center;
}

.blue-title-line .more .text {
  color: #3d3737;
  opacity: 0.4;
  font-size: 26rpx;
}

.blue-title-line .more .icon {
  margin-left: 9rpx;
  width: 18rpx;
  height: 24rpx;
  position: relative;
  top: -1rpx;
}
/* 蓝标题 end */

.gong-gao {
  margin-top: 40rpx;
  background: #fff;
  box-shadow: 0 1rpx 76rpx 0 rgba(241, 238, 238, 0.75);
  border-radius: 4rpx;
}

.gong-gao .gg-list {
  margin-top: 40rpx;
  padding: 0 24rpx 24rpx;
}

.gong-gao .gg-list .gg {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding-bottom: 22rpx;
  border-bottom: 2rpx dashed rgba(0, 0, 0, 0.4);
}

.gong-gao .gg-list .gg:first-child {
  margin-top: 0;
}

.gong-gao .gg-list .gg .title {
  font-size: 26rpx;
  color: #3d3737;
  opacity: 0.9;
  width: 0;
  flex-grow: 1;
}

.gong-gao .gg-list .gg .time {
  font-size: 24rpx;
  color: #3d3737;
  opacity: 0.4;
  margin-left: 24rpx;
  flex-shrink: 0;
}

