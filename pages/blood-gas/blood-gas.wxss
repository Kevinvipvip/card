.back-box {
  background: rgba(255, 255, 255, 0.4);
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 15px;
  left: 15px;
  z-index: 1;
  border-radius: 2px;
}

.back-box image {
  width: 30px;
  height: 30px;
}

.page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.two-people {
  display: flex;
  height: 0;
  flex-grow: 1;
}

.two-people .people {
  width: 0;
  flex-grow: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.two-people .vline {
  content: '';
  width: 5px;
  background-image: linear-gradient(to left, #84a9f4 0%, rgba(255, 255, 255, 0.6) 100%);
}

.two-people .people .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

.two-people .people .blood {
  position: relative;
  z-index: 1;
  font-size: 80px;
  color: #fff;
}

.two-people .people .round-box {
  position: absolute;
  z-index: 1;
  top: 0;
  bottom: 0;
  margin: auto;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.two-people .people.left .round-box {
  left: auto;
  right: 20px;
}

.two-people .people.right .round-box {
  right: auto;
  left: 20px;
}

.two-people .people .round-box .up {
  width: 30px;
  height: 30px;
}

.two-people .people .round-box .num {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: #fff;
}

.two-people .people .round-box .num .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.two-people .people .round-box .num .text {
  position: relative;
  z-index: 1;
}

.two-people .people .round-box .down {
  width: 30px;
  height: 30px;
}

.eight-num::before {
  content: '';
  display: block;
  width: 100%;
  height: 5px;
  background-image: linear-gradient(0deg, #84a9f4 0%, rgba(255, 255, 255, 0.6) 100%);
}

.eight-num {
  height: 0;
  flex-grow: 1;
  position: relative;
  display: flex;
  flex-direction: column;
}

.eight-num .dice {
  position: absolute;
  width: 60px;
  height: 60px;
  left: calc(50% - 30px);
  top: -30rpx;
  z-index: 1;
}

.eight-num .reset {
  position: absolute;
  width: 50px;
  height: 50px;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  z-index: 1;
}

.eight-num .line {
  display: flex;
  height: 0;
  flex-grow: 1;
}

.eight-num .num {
  width: 0;
  flex-grow: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.eight-num .num .bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.eight-num .num .text {
  position: relative;
  z-index: 1;
  color: #fff;
  font-size: 40px;
  letter-spacing: 2px;
}

.eight-num .num .con-img {
  width: 120px;
  height: 120px;
}

.eight-num .num .modal {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.eight-num .vline {
  content: '';
  width: 5px;
  background-image: linear-gradient(to left, #84a9f4 0%, rgba(255, 255, 255, 0.6) 100%);
}
