.page {
  background: #fcfafa;
  padding-top: 24rpx;
}

.card-box {
}

.card-box .card-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 24rpx;
}

.card-box .card-list .card {
  width: 224rpx;
  height: 297rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.card-box .card-list .card:nth-last-child(-n + 3) {
  margin-bottom: 0;
}

.card-box .card-list .card .cover {
  width: 100%;
  height: 100%;
  vertical-align: bottom;
}

.card-box .card .del {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-box .card .del image {
  width: 35rpx;
  height: 35rpx;
}