.auth-box {
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
}

.auth-box image {
    width: 100%;
    height: 100%;
    vertical-align: bottom;
}

.auth-box .auth-btn {
    position:absolute;
    left:0;
    top:0;
    z-index:1;
    opacity:0;
    width:100vw;
    height:100vh;
    box-sizing:border-box;
}

/* 升级中 start */
.update {
    width: 100%;
    height: 100vh;
    box-sizing: border-box;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 45rpx;
    color: #333;
}

.update view {
    position: relative;
    top: -100rpx;
    color: #666;
}
/* 升级中 end */